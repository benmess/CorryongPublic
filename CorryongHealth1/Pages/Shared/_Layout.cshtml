<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Corryong Health</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
    <!--<link rel="stylesheet" href="~/CorryongHealth1.styles.css" asp-append-version="true" /> THis cause the body to overflow into the footer -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="divMargins">
                <table>
                    <tr>
                        <td style="width:120px">
                            <a class="navbar-brand" asp-area="" asp-page="/Index">Home</a>
                        </td>
                        <td style="width:520px">
                            <label id="lblLoggedInUser" class="grdfont12">Logged In User: </label>
                        </td>
                    </tr>
                </table>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index" id="pgIndex">Patient Search</a>
                        </li>
@*                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Bed" id="pgBed">Handover Tool</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/PersonPage" id="pgPerson">Patient Details</a>
                        </li>
 *@                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/FourM" id="pg4M">4M Form</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="divMargins">
        <main role="main" class="pb-3 overflow-auto">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="divMargins">
            &copy; 2024 - Corryong Health
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/CommonFuncs.js" asp-append-version="true"></script>
    <script>

        var gsMyName;
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>